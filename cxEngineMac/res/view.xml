<?xml version="1.0" encoding="UTF-8"?>

<!--TextureKey at *.xml file use-->
<cxViewXML w="300" h="400" cxViewXML.onLoad="viewLoad">
    <cxButton
        id="t1"
        x="0" y="0"
        texture="candy.xml?red.png"
        cxView.onEnter="cxPrint('button t1 enter')"
    />
    <cxButton
        id="t3"
        x="100" y="100"
        texture="candy.xml?blue.png"
        cxView.onEnter="cxPrint('button t3 enter')"
    />
    <cxButton
        id="t2"
        at="5" al="5"
        texture="candy.xml?green.png"
        cxView.onEnter="cxPrint('button t2 enter')"
        cxView.onExit="cxPrint('button t2 exit')"
        cxButton.onPress="cxViewRun({'url':'actions.xml?rotate'})"
    />
</cxViewXML>
