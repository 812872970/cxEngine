<?xml version="1.0" encoding="UTF-8"?>

<!--TextureKey at *.xml file use-->
<cxViewXML cxView.fill="true">
    
    <cxParticle
    cxSprite.texture="candy.xml?blue.png"
    cxView.cropping="false"
    cxView.w = "200"
    cxView.h = "100"
    cxParticle.number = "500"
    cxParticle.blend = "multiple"
    cxParticle.duration = "-1"
    cxParticle.life = "5,5"
    cxParticle.speed = "200,200"
    cxParticle.angle = "90,45"
    cxParticle.gravity = "0,-100"
    cxParticle.todir = "true"
    cxParticle.startspin="2000"
    cxParticle.startsize = "30"
    cxParticle.endsize = "30"
    cxParticle.startcolor="1,1,1,1"
    cxParticle.endcolor="1,1,1,0"
    cxParticle.rate = "200" />
    
    <cxButton
        cxView.w = "180"
        cxView.h = "120"
        cxView.right="10"
        cxView.bottom="10"
        cxButton.onRelease="cxPopView">
        <cxAtlas cxView.fill="true" cxAtlas.scale9="50,50,50,50" cxSprite.texture="scale9.png" />
        <cxLabel cxView.color="0,0,0" cxLabel.font="banana.ttf" cxLabel.text="Return" cxLabel.size="30"/>
    </cxButton>
</cxViewXML>
